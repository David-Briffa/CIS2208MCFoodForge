<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/grey">

<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/detailsLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_margin="8dp"
    >

    <TextView
        android:id="@+id/recipeNameTextView"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/libre_baskerville_bold"
        android:paddingTop="5dp"
        android:paddingBottom="8dp"
        android:textAlignment="center"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.377"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backButton" />

    <TextView
        android:id="@+id/authorTextView"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20sp"
        android:fontFamily="@font/libre_baskerville_italic"
        app:layout_constraintEnd_toEndOf="@+id/recipeNameTextView"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="@+id/recipeNameTextView"
        app:layout_constraintTop_toBottomOf="@+id/recipeNameTextView"
        />

    <ImageView
        android:id="@+id/recipeImageView"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_marginTop="24dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_foreground"
        app:layout_constraintEnd_toEndOf="@+id/authorTextView"
        app:layout_constraintStart_toStartOf="@+id/authorTextView"
        app:layout_constraintTop_toBottomOf="@+id/authorTextView" />

    <TextView
        android:id="@+id/recipeDifficultyTextView"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:paddingBottom="8dp"
        android:textSize="20sp"
        android:fontFamily="@font/libre_baskerville_regular"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/favButton"
        app:layout_constraintHorizontal_bias="0.534"
        app:layout_constraintStart_toStartOf="@+id/favButton"
        app:layout_constraintTop_toBottomOf="@+id/favButton" />

    <TextView
        android:id="@+id/favouriteCountTextView"
        android:layout_width="305dp"
        android:layout_height="37dp"
        android:fontFamily="@font/libre_baskerville_regular"
        android:paddingBottom="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/recipeDifficultyTextView"
        app:layout_constraintStart_toStartOf="@+id/recipeDifficultyTextView"
        app:layout_constraintTop_toBottomOf="@+id/recipeDifficultyTextView" />

    <TextView
        android:id="@+id/ingredientsTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:paddingBottom="8dp"
        android:fontFamily="@font/libre_baskerville_regular"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/ingredientsTitle"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/ingredientsTitle"
        app:layout_constraintTop_toBottomOf="@+id/ingredientsTitle" />

    <TextView
        android:id="@+id/ingredientsTitle"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:text="@string/ingredients"
        android:fontFamily="@font/libre_baskerville_italic"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.006"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recipeDescriptionTextView" />

    <TextView
        android:id="@+id/recipeDescriptionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:fontFamily="@font/libre_baskerville_regular"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/favouriteCountTextView"
        app:layout_constraintHorizontal_bias="0.469"
        app:layout_constraintStart_toStartOf="@+id/favouriteCountTextView"
        app:layout_constraintTop_toBottomOf="@+id/favouriteCountTextView" />

    <Button
        android:id="@+id/favButton"
        android:layout_width="66dp"
        android:layout_height="63dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/recipeImageView"
        app:layout_constraintStart_toStartOf="@+id/recipeImageView"
        app:layout_constraintTop_toBottomOf="@+id/recipeImageView" />

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
